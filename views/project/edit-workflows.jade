extends ../layout

block content
  .row
    .col-md-3.hidden-xs
      +editProjectNav(project, 1)
      .panel
        form.edit-state
          input(type="text", placeholder="State")
          button(type="submit") Submit
      .panel
        form.edit-type
          input(type="color", placeholder="Type")
          input(type="text", placeholder="Type")
          button(type="submit") Submit
    .col-md-9
      .alert.alert-info.alert-dismissible
        button.close(type='button', data-dismiss='alert')
          span(aria-hidden='true') Ã—
          span.sr-only Close
        strong Pro tip! 
        | Drag re-order states to change the workflow.
        | Click on any label to edit text.
      
      each t in types
        p.panel
          span.circle(style='background:#{t.color};')
          span(data-id='#{t._id}', data-url="/post").editable #{t.name}
          span.pull-right
            a(href="#") Delete
          ul.state-orderer.list-group
            each s in t.states
              li.list-group-item.state-orderer-children(data-order='#{s.order}') 
                span.handle &Congruent; 
                span(data-pk='#{s._id}', data-url="/post").editable #{s.name}
                span.pull-right
                  a(href="#") Delete 
            li.list-group-item.add-state
              a(href='#') Add state
      div
        a(href='#')
          | Add type
